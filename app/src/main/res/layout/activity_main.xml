<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/zed_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZedAudio"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/zed_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZedMedia"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zed_audio"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/zed_gles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZedGLES"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zed_media"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>